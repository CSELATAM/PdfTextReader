            foreach (var filename in ViewBag.DO3)
            {
                <p><a asp-route="Document_DownloadGN_Filtro" asp-route-name="@filename">@filename</a></p>
            }
        }
    </div>
    <div class="col-md-3">
        <h3>Outros</h3>
        @{
            foreach (var filename in ViewBag.Outros)
            {
                <p><a asp-route="Document_DownloadGN_Filtro" asp-route-name="@filename">@filename</a></p>
            }
        }
    </div>
</div>
